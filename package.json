{
  "name": "aiscript-vscode",
  "publisher": "aiscript-dev",
  "displayName": "AiScript Highlighting",
  "description": "Add support for AiScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/aiscript-dev/aiscript-vscode"
  },
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:aiscript"
  ],
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./aiscript/intellisense/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "contributes": {
    "languages": [
      {
        "id": "aiscript",
        "aliases": [
          "AiScript",
          "aiscript"
        ],
        "extensions": [
          ".is",
          ".ais"
        ],
        "configuration": "./aiscript/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "aiscript",
        "scopeName": "source.aiscript",
        "path": "./aiscript/syntaxes/aiscript.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "@types/vscode": "^1.83.1",
    "esbuild": "^0.19.7",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@aiscript-dev/aiscript-languageserver": "https://github.com/aiscript-dev/aiscript-languageserver/archive/refs/tags/0.1.6.tar.gz",
    "vscode-languageclient": "^9.0.1"
  }
}
